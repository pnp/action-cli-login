  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
